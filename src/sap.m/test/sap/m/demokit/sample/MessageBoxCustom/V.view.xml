<mvc:View
	controllerName="sap.m.sample.MessageBoxCustom.C"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<l:content>
			<Button
				text="{/buttonCustomContentText}"
				class="sapUiSmallMarginBottom"
				press="showCustomContent"
				width="250px"/>
			<Button
				text="{/buttonDisabledScrollingText}"
				class="sapUiSmallMarginBottom"
				press="handleShowMessageBoxPress_Scrolling"
				width="250px"/>
		</l:content>
	</l:VerticalLayout>
</mvc:View>
